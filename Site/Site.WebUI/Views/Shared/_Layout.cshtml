<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
</head>
<body>
    <div class="content">
        <header class="navbar navbar-expand-lg navbar-dark">
            <a class="navbar-brand" href="#">Car Rental</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#nav_col" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="nav_col">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">
                        @Html.ActionLink("Home", "Index", "Home", null, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item active">
                        @Html.ActionLink("Rental", "Index", "Rental", null, new { @class = "nav-link" })
                    </li>
                    @if (User.IsInRole("manager"))
                    {
                        <li class="nav-item active">
                            @Html.ActionLink("Manager", "Index", "Manager", null, new { @class = "nav-link" })
                        </li>
                    }
                    @if (User.IsInRole("admin"))
                    {
                        <li class="nav-item active">
                            @Html.ActionLink("Admin", "Index", "Admin", null, new { @class = "nav-link" })
                        </li>
                    }
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </header>
        <main class="container">
            @RenderBody()
        </main>
    </div>
    <footer id="footer">
        <div class="container-fluid">
            <div class="row">
                <div class="col-10"><h6>©Car rental</h6></div>
                <div class="col-2"><a href="#">Top</a></div>
            </div>
        </div>
    </footer>
    @Scripts.Render("~/bundles/jquery")
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/scripts/jquery-3.4.1.js")
    @Scripts.Render("~/scripts/jquery.unobtrusive-ajax.js")
    <script src="~/Scripts/jquery-ui.js"></script>
    <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <script type="text/javascript">
        $(document).ready(function () {
            $('input[type=datetime]').datepicker({
                dateFormat: "dd.mm.yy",
                startDate: new Date(),
                changeMonth: true,
                changeYear: true,
                minDate: new Date(),
                getDate:new Date(),
                maxDate: '+2y',
                onSelect: function (dateText, inst) {
                    $("#txtEndDate").datepicker("option", "minDate",
                        $("#txtStartDate").datepicker("getDate"));
                }
            });

        });
    </script>
</body>
</html>
