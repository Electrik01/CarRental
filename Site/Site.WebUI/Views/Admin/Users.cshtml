@model Site.WebUI.Models.User.UserStatusModel
@{
    ViewBag.Title = "Users";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<script src="~/Scripts/bootstrap.js"></script>
<h2>Users</h2>
<ul class="nav nav-tabs" id="myTab" role="tablist">
    <li class="nav-item">
        <a class="nav-link active" id="home-tab" data-toggle="tab" href="#unlocked" role="tab" aria-controls="unlocked" aria-selected="true">Unlocked</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" id="profile-tab" data-toggle="tab" href="#blocked" role="tab" aria-controls="blocked" aria-selected="false">Blocked</a>
    </li>
</ul>
<div class="tab-content" id="myTabContent">
    <div class="tab-pane fade show active" id="unlocked" role="tabpanel" aria-labelledby="home-tab">
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayName("Email")
                </th>
                <th>
                    @Html.DisplayName("Name")
                </th>
                <th>
                </th>
            </tr>

            @foreach (var item in Model.UnlockedUsers)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.ActionLink("Blocked", "Update",new { email=item.Email }, new { @class = "btn btn-danger" })
                    </td>
                </tr>
            }

        </table>
    </div>
    <div class="tab-pane fade" id="blocked" role="tabpanel" aria-labelledby="profile-tab">
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayName("Email")
                </th>
                <th>
                    @Html.DisplayName("Name")
                </th>
                <th>
                </th>
            </tr>

            @foreach (var item in Model.BlockedUsers)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.ActionLink("Unlocked","Update",new { email=item.Email },new {@class="btn btn-success"})
                    </td>
                </tr>
            }

        </table>
    </div>
</div>




