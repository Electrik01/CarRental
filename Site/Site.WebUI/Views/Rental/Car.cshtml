@model Site.WebUI.Models.User.CarViewModel

    <div class="card">
        <div class="row">
            <div class="col-sm-12 col-md-12 col-xl-7">
                <div class="card-img-top">
                    @Html.Raw("<img class='card-img-top' id='car_img' src=\"data:image/jpeg;base64,"
                                 + Convert.ToBase64String(Model.Picture) + "\" />")
                </div>
            </div>
            <div class="col-sm-12 col-md-12 col-xl-5">
                <h4>@Model.Name</h4>
                <div class="row" id="log">
                    <div class="col-4 col-md-12 col-lg-12 col-xl-12">
                        <img src="~/Content/images/oil.png" />
                        <p>@Model.FuelType</p>
                    </div>
                    <div class="col-3 col-md-12 col-lg-12 col-xl-12 ">
                        <img src="~/Content/images/engine.png" />
                        <p>@Model.EngineCapacity</p>
                    </div>
                    <div class="col-5 col-md-12 col-lg-12 col-xl-12">
                        <img src="~/Content/images/transmission.png" />
                        <p>@Model.TransmissionType</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th scope="col">Days</th>
                            <th scope="col">1-2</th>
                            <th scope="col">3-7</th>
                            <th scope="col">8-29</th>
                            <th scope="col">30+</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <th scope="row">Cost</th>
                            <td>@Model.PriceList[0]</td>
                            <td>@Model.PriceList[1]</td>
                            <td>@Model.PriceList[2]</td>
                            <td>@Model.PriceList[3]</td>
                        </tr>
                </table>
            </div>
        </div>
    </div>